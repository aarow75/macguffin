<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
    <%= link_to "Search", "", :onclick => "fetchMovie(document.getElementById(\"movie_title\").value);", :remote => true %>
  </div>
  <div class="field">
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </div>
  <div class="field">
    <%= f.label :series %><br />
    <%= f.text_field :series %>
  </div>
  <div class="field">
    <%= f.label :cover %><br />
    <%= f.text_field :cover %>
    <img id="cover_img" />
  </div>
  <div class="field">
    <%= f.label :director %><br />
    <%= f.text_field :director %>
  </div>
  <div class="field">
    <%= f.label :rating %><br />
    <%= f.number_field :rating, :in => 1...6 %>
  </div>
  <div class="field">
    <%= f.label :freshness %><br />
    <%= f.text_field :freshness %>
  </div>
  <div class="field">
    <%= f.label :imdb %><br />
    <%= f.text_field :imdb %>
  </div>
  <div class="field">
    <%= f.label :lead_actor %><br />
    <%= f.text_field :lead_actor %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :screenwriter %><br />
    <%= f.text_field :screenwriter %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
